<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yijunchen.homes.fragments.MyMapFragment"
    android:orientation="vertical"
    android:id="@+id/container">
    <!--<include layout="@layout/toolbar_search_layout" android:id="@+id/titlebar"/>-->
    <include layout="@layout/map_tool_bar" android:id="@+id/map_toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@+id/divider1">

        <TextView
            android:id="@+id/property_cate_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/map_orange"
            android:text="Rent" />

        <View style="@style/Hor_Divider"
            android:id="@+id/divider2" />

        <TextView
            android:id="@+id/property_cate_two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/map_blue"
            android:text="Mortgage" />

        <View style="@style/Hor_Divider"
            android:id="@+id/divider3" />

        <TextView
            android:id="@+id/property_cate_three"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/map_green"
            android:text="Outright Purchase" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >


        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/map" />

        <android.support.v7.widget.FitWindowsFrameLayout
            android:id="@+id/short_view"
            android:name="com.example.yijunchen.homes.fragments.ShortViewOfPropertyFragment"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="200dp" />

    <!--tools:layout="@layout/short_view_of_property"-->

</FrameLayout>
    </LinearLayout>